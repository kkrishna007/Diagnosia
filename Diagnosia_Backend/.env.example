# Diagnosia Backend
PORT=5000

# PostgreSQL connection string
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://postgres:postgres@localhost:5432/diagnosia

# JWT secret used to sign auth tokens
JWT_SECRET=replace-with-a-long-random-string

# SMTP mail settings (Gmail example)
# For Gmail you must create an App Password (Account > Security > 2FA + App Passwords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=diagnosialab@gmail.com
SMTP_PASS=your_gmail_app_password
FROM_EMAIL="Diagnosia Lab <diagnosialab@gmail.com>"
